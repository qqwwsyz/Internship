<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/purple1" />
            <gradient android:angle="-90" android:startColor="@color/purple2" android:endColor="@color/pink3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/purple2" />
            <solid android:color="@color/purple3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0000ffff" />
            <gradient android:angle="-90" android:startColor="@color/purple1" android:endColor="@color/pink1" />
        </shape>
    </item>
</selector>

